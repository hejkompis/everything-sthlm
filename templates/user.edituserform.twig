    <section class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Redigera användare</h2>
                </div>
            </div>

			<div class="container">
				<div class="row">
				<div class="col-xs-12">
					<form action="/user/updateuser/" method="post">
						<div class="form-group">
							<label for="firstname"><h4>Förnamn</h4></label>
							<input type="text" id="firstname" name="firstname" class="form-control" placeholder="John" value="{{user.firstname}}">
						</div>
						<div class="form-group">
							<label for="lastname"><h4>Efternamn</h4></label>
							<input type="text" id="lastname" name="lastname" class="form-control" placeholder="Doe" value="{{user.lastname}}">
						</div>
						
						<h4>Ange din adress</h4>
						<p class="small">Detta gör du genom att högerklicka på din adress på kartan och välja "Placera markör"</p>
						<div class="gmap" id="gmap"></div>
						<div class="form-group">

							<label>Angiven adress</label>
							<address id="gmaps_address">Ingen adress angiven</address>
							<input type="hidden" id="address" name="address" value="{{user.address}}">
							<input type="hidden" id="latitude" name="latitude" value="{{user.latitude}}" />
							<input type="hidden" id="longitude" name="longitude" value="{{user.longitude}}" />

						</div>

						<div class="form-group">
							<label for="email"><h4>E-post</h4></label>
							<input type="text" id="email" name="email" class="form-control" value="{{user.email}}">
						</div><!--
						<div class="form-group">
							<label for="password"><h4>Lösenord</h4></label>
							<input type="password" id="password" name="password" class="form-control">
						</div>
						<div class="form-group">
							<label for="repeatedpassword"><h4>Upprepa Lösenord</h4></label>
							<input type="password" id="repeatedpassword" name="repeatedpassword" class="form-control">
						</div>-->
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Uppdatera användare</button>
						</div>
					</form>
					
				</div>
			</div>
		</div>
	</div>
</section>
{% include "gmaps.function.twig" %}
{% if not user.latitude %}
	{% set latitude = '59.339375' %}
{% else %}
	{% set latitude = user.latitude %}
{% endif %}
{% if not user.longitude %}
	{% set longitude = '18.067189' %}
{% else %}
	{% set longitude = user.longitude %}
{% endif %}
<script>
	
	$(document).ready(function(){
	
		$('#gmap').ready(function(){
			
			runGmaps({{latitude}}, {{longitude}}, true);
						
		});
			
	});
	
</script>