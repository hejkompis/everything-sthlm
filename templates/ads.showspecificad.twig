<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="adBox">
				<h2>{{ad.title}}</h2>
					{% if ad.tags %}
						{% for tag in tags %}
							{% if tag.id in ad.tags %}<h4>{{tag.name}}{% endif %}</h4>
						{% endfor %}
					{% endif %}
				<p>{{ad.content}}</p>
				<h4>Ersättning/Bytes mot:</h4>
				<p>{{ad.payment}}</p>
				<p>Annonsen publicerades 
					{% if ad.createdDaysAgo == 0 %}
						idag.
					{% elseif ad.createdDaysAgo == 1 %}
						för {{ad.createdDaysAgo}} dag sedan.
					{% else %}
						för {{ad.createdDaysAgo}} dagar sedan.
					{% endif %}
				</p>

				<p>Typ av annons {{ad.typeName}}</p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			{% if user %}
				{{user.firstName}} {{user.lastName}}
			{% else %}
				Du är inte inloggad, logga in!!
			{% endif %}
		</div>
	</div>
</div>