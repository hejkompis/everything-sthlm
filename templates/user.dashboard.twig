   <section id="portfolio" class="bg-darkest-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Hej {{user.firstname}}</h2>
                    {%
                        set correctNumbers = [
                            'noll',
                            'ett', 
                            'två',
                            'tre',
                            'fyra',
                            'fem',
                            'sex',
                            'sju',
                            'åtta',
                            'nio',
                            'tio',
                            'elva',
                            'tolv'
                        ]
                    %}

                    {% if user.noOfAds == 0 %}
                        <p class="light-gray">Du har inte publicerat någon annons än.</p>
                    {% elseif user.noOfAds == 1 %}
                        <p class="light-gray">Du har publicerat en annons sedan du startade ditt konto.</p>
                    {% elseif user.noOfAds > 1 and user.noOfAds <= 12 %}
                        <p class="light-gray">Du har publicerat {{correctNumbers[user.noOfAds]}} annonser sedan du startade ditt konto.</p>
                    {% elseif user.noOfAds > 11 %}
                        <p class="light-gray">Du har publicerat {{user.noOfAds}} annonser sedan du startade ditt konto.</p>

                    {% endif %}

                    {% if user.premium %}
                        <h3 class="section-subheading text-muted"><a href="/ads/newadform">Sätt igång och skapa en ny!</a></h3>
                
                    {% elseif user.noOfAds < 3 and user.premium == false %}
                        <h3 class="section-subheading text-muted"><a href="/ads/newadform">Sätt igång och skapa en ny!</a></h3>
                        <div>
                            <a href="premiumform" class="btn btn-primary">Uppgradera ditt konto</a>
                        </div>
                    {% else %}
                        <p class="light-gray">Du har använt alla dina gratisannonser. Uppgradera ditt konto till Premium för kunna lägga in fler annonser.</p>
                        <div>
                            <a href="premiumform" class="btn btn-primary">Uppgradera ditt konto</a>
                        </div>
                    {% endif %}
                 </div>
            </div>

		</div>
    </section>
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            {% if ads %}
                {% include "user.ads.twig" %}
            {% endif %}
        </div>
    </section>
    
    