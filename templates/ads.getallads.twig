    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Annonser</h2>
                    <h3 class="section-subheading text-muted">Alla annonser som är aktiva just nu</h3>
                </div>
            </div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<form action="" method="get">
				<div class="form-group">
					<label for="search"><h4>Sök på fritext</h4></label>
					<input type="text" id="search" class="form-control" name="search">
				</div>
				
				<div class="form-group">
					<label><h4>Taggar</label></h4><br />
					{% for tag in tags %}
						<div class="checkbox-inline">
							<label class="checkbox-inline"><input type="checkbox" name="tags[]" value="{{tag.id}}"{% if tag.id in searchTags %} checked="checked" {% endif %}>{{tag.name}}</label>
						</div>
					{% endfor %}
				</div>

				<div class="form-group">
					<label><h4>Annonstyp</h4></label><br />
					<div class="">
						<select name="adtype" class="form-control">
							<option value="">Alla annonstyper</option>

							{% for adType in adTypes %}

							<option value="{{adType.id}}" {% if adType.id in searchAdTypes %} selected="selected" {% endif %}> {{adType.name}}
							</option>

							{% endfor %}
						</select>
					</div>
				</div>

				<div class="form-group"><button type="submit" class="btn btn-primary">Sök</button></div>
			</form>
		</div>
	</div>



            <div class="row">
            	 	{% for ad in ads %}
            	 <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="/ads/?id={{ad.id}}" class="portfolio-link" data-toggle="modal">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="../img/portfolio/roundicons.png" class="img-responsive" alt="">
                    </a>
                    <div class="portfolio-caption">
                       <a href="/ads/?id={{ad.id}}">{{ad.title}}</a>
                        <p lass="text-muted">{{ad.dateCreated}}</p>
                    </div>
                </div>
				{% endfor %}
            </div>

        </div>
    </section>